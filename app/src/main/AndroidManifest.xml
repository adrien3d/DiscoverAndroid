<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iotech.discover" >
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MyMaterialTheme" >
        <activity
            android:name="com.iotech.discover.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.iotech.discover.LoginActivity" android:theme="@style/LogTheme.Dark" />
        <activity android:name="com.iotech.discover.SignupActivity" android:theme="@style/LogTheme.Dark" />
        <activity android:name="com.iotech.discover.Tab1City" android:theme="@style/MyMaterialTheme" />
        <activity android:name="com.iotech.discover.Tab1Guide" android:theme="@style/MyMaterialTheme" />
    </application>

</manifest>
